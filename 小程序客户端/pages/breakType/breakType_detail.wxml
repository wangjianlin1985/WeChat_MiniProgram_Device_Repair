<view class="container">
  <loading hidden="{{loadingHide}}">
    {{loadingText}}
  </loading>

  <view class="title">故障类型详情</view>
  <view class="breakType_detail_view"> 
      <view class="viewItem">
        <view class="label">类型编号：</view>
        <view class="content">
          <view>{{breakTypeId}}</view>
        </view>
      </view>

       <view class="viewItem">
        <view class="label">类型名称：</view>
        <view class="content"> 
          <view>{{breakTypeName}}</view>
        </view>
      </view>

      <view>
        <navigator class="btnReturn" open-type="navigateBack" hover-class="navigator-hover">返回</navigator>
      </view>

  </view>
</view>
