<view class="container">
  <loading hidden="{{loadingHide}}">
    {{loadingText}}
  </loading>
  <view class="title">添加任务状态</view>

  <view class="taskInfoState_add_view">
    <form bindsubmit="formSubmit">
      <view class="formItem">
        <view class="label">状态名称：</view>
        <view class="formControl">
          <input type="text" name="taskInfoState.stateName" placeholder="请输入状态名称" value="{{stateName}}" />
        </view>
      </view>

      <view>
        <button class="vBtn_ok" formType="submit" disabled="{{disabled}}">提交发布</button>
      </view>

    </form>
  </view>
</view>
